@model FinalProject.Models.DTO.LoginModel

@{
    Layout = "_LayoutInicial";
}

<style>
    .conjunto{
        flex-direction: column;
    }

    .campo{
        left: 8%;
    }

    .formulario button{
        margin-top: 50px;
        height: 60px;
        width: 200px;
    }
</style>

<div class="container-pai">
<div class="container">
    <form asp-action="Login" method="post" class="formulario">
        <div style="display: flex; flex-direction: column; width: 100%; height: 100%; align-items: center; justify-content: center;">
            <div class="titulo">
                <h2>Logar no Sistema</h2>
            </div>

            <div class="conjunto">
                <div class="campo">
                    <input type="email" asp-for="Email">
                    <label asp-for="Email">Email</label>
                </div>
                <div class="campo">        
                    <input type="password" asp-for="Password">
                    <label asp-for="Password">Senha</label>
                </div>
            </div>
            
            <a asp-controller="UserAuthentication" asp-action="Register" class="link">Não possui cadastro?</a>
            <button class="btn btn-primary" type="submit">Login</button>  
        </div>
        
    </form>
</div>
</div>

