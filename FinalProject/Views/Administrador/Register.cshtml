@model FinalProject.Models.Domains.Administrador

@{
    Layout = "_Layout";
}

<style>
    .container_filho{
        position: relative;
        height: 80%;
        top: 10%;
        width: 90%;
        border: 1px solid;
        border-radius: 20px;
        background: gainsboro;
        box-shadow: 1px 2px 10px 0.5px;
    }

    h1{
        margin: 2% auto;
        text-align: center;
        font-size: 28px;
    } 

    .formulario{
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .formulario button{
        background: #695CFE;
        border: none;
        border-radius: 6px;
        width: 200px;
        text-align: center;
        height: 70px;
        color: #fff;
        font-size: 14px;
        display: block;
        margin: 2% auto;
        cursor: pointer;
        font-size: 20px;
    }

    .conjunto{
        width: 80%;
    }

    .campo{
       padding: 10px 0px;
    }
</style>

<div class="container_filho">   
    <h1>Cadastrar Administradores</h1>
        <form asp-controller="Administrador" asp-action="Register" method="post" class="formulario">
            <div class="conjunto">        
                <div class="campo">
                    <label asp-for="Nome" class="form-label">Nome Completo</label>
                    <input type="text" class="form-control" asp-for="Nome">
                </div>

                <div class="campo">
                    <label asp-for="Email" class="form-label">Email</label>
                    <input type="email" class="form-control" asp-for="Email">
                </div>

                <div class="campo">
                    <label asp-for="Telefone" class="form-label">Telefone</label>
                    <input type="tel" class="form-control" asp-for="Telefone">
                </div>
            </div>

            <div class="conjunto">
                <div class="campo">
                    <label asp-for="Role" class="form-label">Nível de Acesso</label>
                    <select type="text" class="form-select" asp-for="Role">
                        <option value="Admin">Administrador</option>
                        <option value="Supervisor">Supervisor</option>
                    </select>
                </div>
            </div>

            <button class="btn btn-primary" type="submit">Cadastrar</button>  
        </form>
</div>